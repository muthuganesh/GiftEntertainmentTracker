<h3>Division</h3>

@foreach (var item in Model) {
    if (!string.IsNullOrEmpty(item.DivisionName))
    {
        <table style="height:0px;width:0px">
            <tr>
                <td style="height:100px;width:50px">
                    @Html.ActionLink(item.DivisionName, "Department", new { divisionId = item.DivisionId })
                </td>
            </tr>
        </table>
    }
}

<h3>Department Without Division</h3>
@foreach (var item in Model) {
    if (string.IsNullOrEmpty(item.DivisionName) && !string.IsNullOrEmpty(item.DepartmentName))
    {
        <table style="height:0px;width:0px">
            <tr>
                <td style="height:100px;width:50px">
                    @Html.ActionLink(item.DepartmentName, "Users", new { departmentId = item.DepartmentId })
                </td>
            </tr>
        </table>
    }
}
 
