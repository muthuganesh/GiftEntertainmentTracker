@model IEnumerable<RSQ.GiftEntertainmentTracker.Models.DivisionModel>

@{
    ViewBag.Title = "Division";
}

<h2>Division</h2>

<p>
    @Html.ActionLink("Create New", "CreateDivision")
</p>
@{  
    int i=0;
    if (Model != null)
    {
        <table>
            <tr>
                @foreach (var item in Model)
                {
                    <td style='height:100px;width:50px'>
                    @if (i % 6 == 0)
                    {
                        if (!string.IsNullOrEmpty(item.DivisionName))
                        {
                            if (item.DivisionName.Length > 8)
                            {
                                string text = string.Format(item.DivisionName.Substring(0, 8) + "..");
                                @Html.ActionLink(text, "Department", new { divisionId = item.DivisionId })
                            }
                            else
                            {
                                @Html.ActionLink(item.DivisionName, "Department", new { divisionId = item.DivisionId })
                            }
                            @Html.ActionLink("Delete", "DeleteDivision", new { divisionId = item.DivisionId })
                            i++;
                        }
                    }
                    else
                    {
                        if (!string.IsNullOrEmpty(item.DivisionName))
                        {
                            if (item.DivisionName.Length > 8)
                            {
                                string text = string.Format(item.DivisionName.Substring(0, 8) + "..");
                                @Html.ActionLink(text, "Department", new { divisionId = item.DivisionId })
                            }
                            else
                            {
                                @Html.ActionLink(item.DivisionName, "Department", new { divisionId = item.DivisionId })
                            }
                            @Html.ActionLink("Delete", "DeleteDivision", new { divisionId = item.DivisionId })
                            i++;
                        }
                    }
                    </td>
                }
            </tr>
        </table>
    }
}
