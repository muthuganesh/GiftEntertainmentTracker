@if (Request.IsAuthenticated)
{
    <div class="container">
    <p class="text-right"> Welcome @Html.ActionLink(User.Identity.Name, "ChangePassword", "Account")!
         [ @Html.ActionLink("Log Off", "LogOff", "Account") ]</p>
        @foreach (var role in Roles.GetRolesForUser(User.Identity.Name))
        {
        <p class="text-right">Role:@Html.Label(role)</p>
        }
    </div>
}

