@model RSQ.GiftEntertainmentTracker.Models.RoleModel

@{
    ViewBag.Title = "RoleList";
}

<h2 style="font-family:Times New Roman;color:Gray;">Role List</h2>

<p>
    @Html.ActionLink("Create Role", "CreateRole")
</p>

@{
    var grid = new WebGrid(source: Model.Role,
     defaultSort: "Role",
         rowsPerPage: 25);
 }
 <div>
  @grid.GetHtml(
      tableStyle: "grid",
      headerStyle: "head",
      alternatingRowStyle: "alt",
     columns: grid.Columns(
                            grid.Column(header: "Delete/Edit",
                         style: "text-align-center",
                             format: (item) => new
                                          HtmlString(Html.ActionLink("Delete", "DeleteRole", new { roleName = item.Value }) + "|" +
                                                           Html.ActionLink("Edit", "EditRole", new { roleName = item.Value }) + "|" +
                                                                      Html.ActionLink("Users", "RoleUserList", new { roleName = item.Value }) + "|" +
                                                                       Html.ActionLink("Permission", "RolePermission", new { roleName = item.Value })
                                                    )
                                        ),
                                  grid.Column(format: (item) => new HtmlString(item.Value))

    )
  )
 </div>
<p style="margin-left:90%">
    @Html.ActionLink("Back to Main Page", "Index", "Home")
</p>




