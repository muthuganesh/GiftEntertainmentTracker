@model RSQ.GiftEntertainmentTracker.Models.RoleModel

@{
    ViewBag.Title = "CreateRole";
}

<h2 style="font-family:Times New Roman;color:Gray;">Create Role</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Role</legend>

        <div class="editor-label">
            @Html.Label("Role")
        </div>
        <div class="editor-field">
            @Html.TextBox("roleName")&nbsp;&nbsp;&nbsp;@Html.Raw(ViewData["Role"].ToString())
        </div>
        <p>
            <input type="submit" value="Create"/>
        </p>
    </fieldset>
}

<div class="text-right">
    @Html.ActionLink("Back to List", "RoleList")
</div>
