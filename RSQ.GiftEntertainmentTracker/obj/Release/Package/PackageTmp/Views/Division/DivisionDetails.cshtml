@model RSQ.GiftEntertainmentTracker.Models.DivisionModel

@{
    ViewBag.Title = "DivisionDetails";
}

<h2 style="font-family:Times New Roman;color:Gray;">Division Details</h2>

<h3 style="font-family:Calibri;color:Purple" title="Company Name">@Html.DisplayFor(model => model.CompanyName)</h3>

<table style="border-width:medium" title="Division Details">
        <tr>
            <td style="width:25%" align="justify">
                Division Name:
            </td>
            <td>
                @Html.DisplayFor(model => model.DivisionName)
            </td>
        </tr>
        <tr>
            <td style="width:25%" align="justify">
                Address:
            </td>
            <td>
                @Html.DisplayFor(model => model.AddressLine1)
                <br />
                @Html.DisplayFor(model => model.AddressLine2)
                <br />
                @Html.DisplayFor(model => model.AddressLine3)
            </td>
        </tr>
        <tr>
             <td style="width:25%" align="justify">
                State:
            </td>
            <td>
                @Html.DisplayFor(model => model.State)
            </td>
        </tr>
        <tr>
             <td style="width:25%" align="justify">
                Country:
            </td>
            <td>
                @Html.DisplayFor(model => model.Country)
            </td>
        </tr>
        <tr>
             <td style="width:25%" align="justify">
                Zip Code:
            </td>
            <td>
                 @Html.DisplayFor(model => model.ZipCode)
            </td>
        </tr>
        <tr>
             <td style="width:25%" align="justify">
                Phone No:
            </td>
            <td>
                @Html.DisplayFor(model => model.PhoneNo)
            </td>
        </tr>
        <tr>
             <td style="width:25%;" align="justify">
                Fax No:
            </td>
            <td>
                @Html.DisplayFor(model => model.FaxNo)
            </td>
        </tr>
    </table>

<p style="margin-left:90%">
@if (ViewBag.DivisionEdit == true)
{
    @Html.ActionLink("Edit", "EditDivision", new { divisionId = Model.DivisionId }) <br />
}
    @Html.ActionLink("Back to List", "DivisionResult")<br />
    @Html.ActionLink("Back to Main Page", "Index", "Home")
</p>
