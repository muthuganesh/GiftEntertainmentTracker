@model RSQ.GiftEntertainmentTracker.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    <div class="form-actions" id="logOnDisplay" style="width:260px">
        <fieldset>
            <legend>Account Information</legend>

        <div class="editor-field">
            <input class="span3" type="email" placeholder="xxx@mail.com" name="Email" required>
        </div>

        <div class="editor-field">
            <input class="span3" type="password" placeholder="Password" name="Password" required>
        </div>

        <div class="editor-label">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>

         <p class="text-right">
            <input type="submit" value="Log On" class="btn btn-primary btn-small"/>
        </p>
        </fieldset>
        
    </div>

    <div id="logOnDisplaytext">
        <p>
            Forgot password. <a href="ForgotPassword" class="btn btn-small">Click Here</a> to generate New Password.
        </p>
        <p>
            <a href="Register" class="btn btn-success btn-small">Register</a> if you don't have an account.
        </p>

        <p id="logOnValidation">
            @Html.ValidationSummary(true, "Login was unsuccessful. Please try again.")
        </p>
    </div>
}
