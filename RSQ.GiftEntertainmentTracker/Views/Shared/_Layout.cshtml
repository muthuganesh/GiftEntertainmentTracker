<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h2 id="headerName">Gift & Entertainment Management System</h2>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        @if (Request.IsAuthenticated)
        {
            <nav>
                <ul id="menu">
                    |<li>@Html.ActionLink("About", "About", "Home")</li>|
                    <li>@Html.ActionLink("Company", "CompanyResult", "Company")</li>|
                    <li>@Html.ActionLink("Division", "DivisionResult", "Division")</li>|
                    <li>@Html.ActionLink("Department", "DepartmentResult", "Department")</li>|
                    <li>@Html.ActionLink("Profile", "UserDetails", "Profile")</li>|
                    <li>@Html.ActionLink("Admin", "Index", "Admin")</li>|
                    <li>@Html.ActionLink("Role", "RoleList", "Role")</li>|
                    </ul>
            </nav>
        }
        <section id="main">           
             @RenderBody()
        </section>
        </header>
    </div>
</body>
</html>
